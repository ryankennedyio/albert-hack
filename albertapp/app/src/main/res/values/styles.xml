<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="background">@color/blue_500</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Navbar">
        <item name="android:background">@color/blue_500</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LookupBar">
        <item name="android:background">@color/blue_700</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchBtn">
        <item name="android:background">@null</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/blue_700</item>
    </style>

    <style name="SearchField">
        <item name="android:textSize">40sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LoginField">
        <item name="android:textSize">40sp</item>
        <item name="android:textColorHint">#a6b3b9</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LoginBtn">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

</resources>
